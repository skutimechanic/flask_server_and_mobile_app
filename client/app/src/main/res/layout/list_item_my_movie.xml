<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.polsl.movielibrary.api.models.UserMovieListItemModel" />
    </data>

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/red"
                android:clickable="true"
                android:padding="20dp"
                android:src="@drawable/ic_baseline_delete_24" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:background="@color/myItemBackground">

                <ImageView
                    android:id="@+id/my_movie_image"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setImageBackground="@{movie.movie.image_link}" />

                <TextView
                    android:id="@+id/my_movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@{movie.movie.title}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/my_movie_year"
                    app:layout_constraintStart_toEndOf="@id/my_movie_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/my_movie_year"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/my_movie_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setNumberString="@{movie.movie.year}" />

                <TextView
                    android:id="@+id/my_movie_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/type_label"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/my_movie_image"
                    app:layout_constraintTop_toBottomOf="@+id/my_movie_title" />

                <TextView
                    android:id="@+id/my_movie_type"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@{movie.movie.category}"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/my_movie_type_label"
                    app:layout_constraintTop_toBottomOf="@+id/my_movie_title" />


                <ImageView
                    android:id="@+id/my_movie_my_rating_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/my_movie_my_rating"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/my_movie_my_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setMovieRating="@{movie.rate}" />

                <ImageView
                    android:id="@+id/my_movie_rating_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_stars_24"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/my_movie_rating"
                    app:layout_constraintTop_toBottomOf="@id/my_movie_my_rating_label" />

                <TextView
                    android:id="@+id/my_movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_movie_my_rating"
                    app:setMovieRating="@{movie.movie.rating_sum}" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </com.daimajia.swipe.SwipeLayout>

</layout>
