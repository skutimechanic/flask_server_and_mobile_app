<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.polsl.movielibrary.ui.base.BaseViewModel" />

        <variable
            name="viewModel"
            type="com.polsl.movielibrary.ui.movieDetails.MovieDetailsViewModel" />

        <variable
            name="movie"
            type="com.polsl.movielibrary.repositories.models.ExtendedMovieDetailsItemModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp">

        <ImageView
            android:id="@+id/movie_details_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setImageBackground="@{movie.movie.image_link}" />

        <TextView
            android:id="@+id/movie_details_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="@{movie.movie.title}"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/movie_details_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_details_type_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/type_label"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/movie_details_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_title" />

        <TextView
            android:id="@+id/movie_details_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@{movie.movie.category}"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/movie_details_type_label"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_title" />

        <TextView
            android:id="@+id/movie_details_director_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/director_label"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/movie_details_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_type_label" />

        <TextView
            android:id="@+id/movie_details_director"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@{movie.movie.director}"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/movie_details_director_label"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_type_label" />


        <TextView
            android:id="@+id/movie_details_country_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/country_label"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/movie_details_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_director_label" />

        <TextView
            android:id="@+id/movie_details_country"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@{movie.movie.country}"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/movie_details_country_label"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_director_label" />


        <TextView
            android:id="@+id/movie_details_year_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/year_label"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/movie_details_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_country" />

        <TextView
            android:id="@+id/movie_details_year"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/movie_details_year_label"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_country"
            app:setNumberString="@{movie.movie.year}" />

        <TextView
            android:id="@+id/movie_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="5dp"
            android:text="@{movie.movie.description}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_image" />

        <TextView
            android:id="@+id/movie_details_global_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/global_rate_label"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_description" />

        <com.google.android.material.slider.Slider
            android:id="@+id/movie_rate_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:stepSize="0.1"
            android:valueFrom="0.0"
            android:valueTo="10.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_global_rate_label"
            app:setMovieRatingSlider="@{movie.movie.rating_sum}" />

        <TextView
            android:id="@+id/movie_details_votes_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:text="@string/votes_label"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_rate_slider" />

        <TextView
            android:id="@+id/movie_details_votes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/movie_details_votes_label"
            app:layout_constraintTop_toBottomOf="@+id/movie_rate_slider"
            app:setNumberString="@{movie.movie.number_of_votes}" />

        <TextView
            android:id="@+id/movie_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_rate_slider"
            app:setMovieRatingWithRange="@{movie.movie.rating_sum}" />

        <TextView
            android:id="@+id/movie_details_my_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/my_rate_label"
            android:textSize="16sp"
            app:isVisible="@{viewModel.isUserActive()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_votes_label" />

        <com.google.android.material.slider.Slider
            android:id="@+id/movie_my_rate_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="@{movie.isUserMovie}"
            android:stepSize="0.5"
            android:valueFrom="0.0"
            android:valueTo="10.0"
            app:isVisible="@{viewModel.isUserActive()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_my_rate_label"
            app:setMovieRatingSlider="@{movie.rate}" />

        <Button
            android:id="@+id/add_movie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:isVisible="@{viewModel.isUserActive()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_my_rate_slider"
            app:setDetailsButtonLabel="@{movie.isUserMovie}" />


        <ImageView
            android:id="@+id/admin_delete_movie_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_baseline_delete_24"
            app:isVisible="@{viewModel.isUserAdmin()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add_movie_button"
            app:layout_constraintBottom_toBottomOf="@+id/add_movie_button"
            app:layout_constraintTop_toTopOf="@+id/add_movie_button" />


        <include
            android:id="@+id/include"
            layout="@layout/progress_bar_base"
            app:baseViewModel="@{(BaseViewModel) viewModel}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>